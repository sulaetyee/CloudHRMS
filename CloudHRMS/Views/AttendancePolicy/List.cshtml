@model IList<CloudHRMS.Models.ViewModels.AttendancePolicyViewModel>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<h1>
    The List Of Attendance Policy Information
</h1>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}
<table class="table table-dark" id="AttendancePolicyTable">
    <thead>
        <tr>
            <th scope="col">#</th> <!-- sr no-->
            <th scope="col">Name</th>
            <th scope="col">Number Of Late Time</th>
            <th scope="col">Number Of EarlyOut Time</th>
            <th scope="col">Deduction In Amount</th>
            <th scope="col">Deduction In Day</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- for record all-->
        @foreach (var item in Model) // Model is build in model
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.Name</td>
                <td>@item.NumberOfLateTime</td>
                <td>@item.NumberOfEarlyOutTime</td>
                <td>@item.DeductionInAmount</td>
                <td>@item.DeductionInDay</td>
                <td>
                    <a href="/attendancePolicy/edit?id=@item.Id" role="button" class="btn btn-success"> Edit </a><!--/department/edit" --><!--/department/delete" -->
                    <a href="/attendancePolicy/deletebyId?id=@item.Id" role="button" class="btn btn-danger" onclick="return confirm('Are you to delete this record')" ;> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready( function () {
        $('#AttendancePolicyTable').DataTable();
    } );
</script>

