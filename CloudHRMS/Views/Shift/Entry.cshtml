<!DOCTYPE html>
@model CloudHRMS.Models.ViewModels.ShiftViewModel;
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Addition of Shift Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">The Addition of Shift Form</h2>

        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Msg"]
            </div>
        }
        <form action="/shift/entry" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter the name of AttendancePolicy"  required>
            </div>

            <div class="form-group">
                <label for="numberOfLateTime">In Time</label>
                <input type="time" class="form-control" id="inTime" name="inTime" placeholder="Enter In Time"  required>
            </div>

            <div class="form-group">
                <label for="numberOfEarlyOutTime">Out Time</label>
                <input type="time" class="form-control" id="outTime" name="outTime" placeholder="Enter Out Time"  required>
            </div>
            <div class="form-group">
                <label for="DeductionInAmount">Late After</label>
                <input type="time" class="form-control" id="lateAfter" name="lateAfter" placeholder="Enter the time of Late After"  required>
            </div>
            <div class="form-group">
                <label for="deductionInDay">Early Out Before</label>
                <input type="time" class="form-control" id="earlyOutBefore" name="earlyOutBefore" placeholder="Enter the EarlyOut Before"  required>
            </div>
            <div class="form-group">
                <label for="attendancePolicies" class="form-label">Attendance Policy</label>

                <select class="form-select" name="AttendancePolicyId">
                    <option class="form-select" value="" selected>-- SELECT ONE --</option>
                    @foreach (var item in Model.AttendancePolicies)
                    {
                        
                            <option class="form-select" value="@item.Id">@item.Name</option>
                        
                    }
                </select>

            </div>
            <button type="submit" class="btn btn-primary" style="border-color: #00008B; background-color: #00008B;">Entry</button>
            <button type="reset" class="btn btn-primary" style="border-color: #dc3545; background-color: #dc3545;">Cancel</button>
        </form>
    </div>


</body>
</html>
