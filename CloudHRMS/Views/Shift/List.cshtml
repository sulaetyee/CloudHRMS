@model IList<CloudHRMS.Models.ViewModels.ShiftViewModel>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<h1>
    The List Of Shift Information
</h1>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}
<table class="table table-dark" id="ShiftTable">
    <thead>
        <tr>
            <th scope="col">#</th> <!-- sr no-->
            <th scope="col">Name</th>
            <th scope="col">In Time</th>
            <th scope="col">Out Time</th>
            <th scope="col">Late After</th>
            <th scope="col">Early Out Before</th>
            <th scope="col">Attendance Policy</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- for record all-->
        @foreach (var item in Model) // Model is build in model
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.Name</td>
                <td>@item.InTime</td>
                <td>@item.OutTime</td>
                <td>@item.LateAfter</td>
                <td>@item.EarlyOutBefore</td>
                <td>@item.AttendancePolicyInfo</td>
                <td>
                    <a href="/shift/edit?id=@item.Id" role="button" class="btn btn-success"> Edit </a><!--/department/edit" --><!--/department/delete" -->
                    <a href="/shift/deletebyId?id=@item.Id" role="button" class="btn btn-danger" onclick="return confirm('Are you to delete this record')" ;> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready( function () {
        $('#ShiftTable').DataTable();
    } );
</script>

