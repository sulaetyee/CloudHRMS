<!DOCTYPE html>
@model CloudHRMS.Models.ViewModels.ShiftAssignViewModel;
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Attendance Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Shift Assign Edit Form</h2>

        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Msg"]
            </div>
        }
        <form action="/shiftAssign/update" method="post">

            <input type="hidden" class="form-control" id="id" name="id" value="@Model.Id">

            <!--<div class="form-group">
                <label for="name">Employee </label>
                <input type="date" class="form-control" id="attendanceDate" name="attendanceDate" placeholder="Enter the name of AttendancePolicy" required>
            </div>-->

            <div class="form-group">
                <label for="employees" class="form-label">Employee </label>

                <select class="form-select" name="employeeId" id="employeeId">
                    
                    @foreach (var item in Model.Employees)
                    {
                        if (item.Id == Model.EmployeeId)
                        {
                            <option class="form-select" value="@item.Id" selected>@(item.Code + "-" + item.Name)</option>
                        }
                        else
                        {
                            <option class="form-select" value="@item.Id">@item.Name</option>
                        }
                    }

                </select>

            </div>
            <div class="form-group">
                <label for="shifts" class="form-label">Shift </label>

                <select class="form-select" name="shiftId" id="shiftId">
                    
                    @foreach (var item in Model.Shifts)
                    {
                        if (item.Id == Model.ShiftId)
                        {
                            <option class="form-select" value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option class="form-select" value="@item.Id">@item.Name</option>
                        }

                    }
                </select>
            </div>
            <div class="form-group">
                <label for="name">From Date</label>
                <input type="date" class="form-control" id="fromDate" name="fromDate" placeholder="Enter from Date" required>
            </div>
            <div class="form-group">
                <label for="name">To Date</label>
                <input type="date" class="form-control" id="toDate" name="toDate" placeholder="Enter To Date" required>
            </div>
            <!-- -->

            <button type="submit" class="btn btn-primary" style="border-color: #00008B; background-color: #00008B;">Entry</button>
            <button type="reset" class="btn btn-primary" style="border-color: #dc3545; background-color: #dc3545;">Cancel</button>
        </form>
    </div>


</body>
</html>


