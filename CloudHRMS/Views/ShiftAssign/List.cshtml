@model IList<CloudHRMS.Models.ViewModels.ShiftAssignViewModel>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<h1>
    The List Of Shift Information
</h1>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}
<table class="table table-dark" id="ShiftTable">
    <thead>
        <tr>
            <th scope="col">#</th> <!-- sr no-->
            <th scope="col">Employee</th>
            <th scope="col">Shift</th>
            <th scope="col">From Date</th>
            <th scope="col">To Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- for record all-->
        @foreach (var item in Model) // Model is build in model
        {
            <tr>
                <th scope="row">@(Model.IndexOf(item) + 1)</th>
                <td>@item.EmployeeName</td>
                <td>@item.ShiftName</td>
                <td>@item.FromDate.ToString("yyyy-MM-dd")</td>
                <td>@item.ToDate.ToString("yyyy-MM-dd")</td>

                <td>
                    <a href="/shiftAssign/edit?id=@item.Id" role="button" class="btn btn-success"> Edit </a><!--/department/edit" --><!--/department/delete" -->
                    <a href="/shiftAssign/deletebyId?id=@item.Id" role="button" class="btn btn-danger" onclick="return confirm('Are you to delete this record')" ;> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready( function () {
        $('#ShiftTable').DataTable();
    } );
</script>

