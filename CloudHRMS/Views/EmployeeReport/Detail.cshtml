@if (ViewBag.Msg != null)
{
    <div class="alert alert-secondary" role="alert">
		@TempData["Msg"]
    </div>
}
<div class="container mt-5">
    <div class="card">
        <div class="card-header text-center">
            <h4>Employee Detail Report</h4>
        </div>
        <div class="card-body">
            <form action="/employeeReport/detail" method="post">
                <div class="mb-3">
                    <label for="fromCode" class="form-label">From Code</label>
                    <input type="text" class="form-control" placeholder="Type from Code" name="fromCode" required>
                </div>
                <div class="mb-3">
                    <label for="toCode" class="form-label">To Code</label>
                    <input type="text" class="form-control" placeholder="Type To Code" name="toCode" required>
                </div>
                <button type="submit" class="btn btn-success">Show</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
        </div>
    </div>
</div>

